//main.js--The click is what the user will do.The on is the function for the event and then the function that comes after the click is the callback function.In the 
//callback function you can either use addClass or toggleClass.
$(document).ready(function(){
	$('.box').on('click',function(){
		$('.box').toggleClass('highlight');
	});
});

//style.css
.box{
	width:150px;
	height:150px;
	background-color:#CFC
}

.highlight{
	background-color:#FCC
}
